    "vscode": "^1.50.0" // Version minimale de VSCode compatible
  },
  "categories": [
    "Themes" // Catégorie obligatoire pour les thèmes
  ],
  "icon": "France.jpg", // Optionnel : tu peux définir une icône pour ton pack
