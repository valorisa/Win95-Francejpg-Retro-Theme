      },
      // --- Thème 2 : Armor-lux Marinière ---
      {
        "label": "Armor-lux Marinière",   // Nom du thème dans VSCode
        "uiTheme": "vs-light",            // Type de thème (clair)
        "path": "./themes/armorlux-mariniere-theme.json" // Chemin vers le fichier thème
      },
      // --- Thème 3 : Chaudard - Ail Edition ---
      {
        "label": "Chaudard - Ail Edition",// Nom du thème dans VSCode
        "uiTheme": "vs-light",            // Type de thème (clair)
